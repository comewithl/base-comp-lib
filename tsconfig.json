{
  "compilerOptions": {
    // 如果webpack声明的引入别名此处也要进行声明
    "baseUrl":"./",
    "paths": {
      "@/*": ["src/*"],
      "@/components/*": ["src/components/*"]
      },
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true, // null、undefined不能赋值给声明的类型变量（除非设置varilable: string | null | undefined）
    "pretty": true,
    "removeComments": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "lib": ["dom", "es2018"],
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDirs": ["./src"],
    "outDir": "./ts",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true, // 输出 Source Map 方便调试
    "declaration": true,
    "declarationDir": "./ts",
    "importHelpers": true // 减少代码的冗余，类似：@babel/plugin-transform-runtime
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules","es","lib",  "**/demo/**"]
}
